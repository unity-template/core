{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },

  "exclude": [
    ".yarn/releases/*",
    "**/__tests__/**/*",
    "**/__mocks__/**/*",
    "**/build/**/*"
  ]
}
